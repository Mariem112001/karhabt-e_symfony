{% extends 'baseFront.html.twig' %}

{% block title %} 
    Détails réclamations
{% endblock %}

{% block body %}
    <div class="container">
        <div class="jumbotron" style="background: linear-gradient(to right, #4F79C7, #75A1D0);">
            <h1 class="display-4" style="color: white;">Reclamation</h1>
        </div>

        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th style="background-color: #4F79C7; color: white;">Sujet</th>
                    <td>{{ reclamation.sujet }}</td>
                </tr>
                <tr>
                    <th style="background-color: #4F79C7; color: white;">Description</th>
                    <td>{{ reclamation.description }}</td>
                </tr>
                <tr>
                    <th style="background-color: #4F79C7; color: white;">Date de Réclamation</th>
                    <td>{{ reclamation.dateReclamation ? reclamation.dateReclamation|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th style="background-color: #4F79C7; color: white;">Email</th>
                    <td>{{ reclamation.emailUser }}</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center">
            <a href="{{ path('app_reclamation_index') }}" class="btn btn-secondary mr-2" style="background-color: #4F79C7; border-color: #4F79C7;">Retour</a>
            <a href="{{ path('app_reclamation_edit', {'idr': reclamation.idr}) }}" class="btn btn-primary" style="background-color: #4F79C7; border-color: #4F79C7;">Modifier</a>
        </div>

        {{ include('reclamation/_delete_form.html.twig') }}
    </div>
{% endblock %}
