{% extends 'basefront.html.twig' %}

{% block body %}
    <br>
    <br>
    <br>
    <div class="container">
        <h1 class="mt-3 mb-4">Search Results</h1>
        <div class="row">
            {% if actualites is not empty %}
                {% for actualite in actualites %}
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-img-container">
                                <img src="{{ asset('uploads/' ~ actualite.image) }}" alt="{{ actualite.titre }}" class="card-img-top">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title text-center">{{ actualite.titre }}</h5>
                                <div class="d-flex justify-content-center align-item-center">
                                    <img src="{{ actualite.qrCode }}" alt="QR Code" width="123" height="100">
                                </div>
                                <div class="collapse" id="collapse{{ actualite.id }}">
                                    <p>{{ actualite.contenue }}</p>
                                </div>
                                <button class="btn btn-primary btn-sm" type="button" data-toggle="collapse" data-target="#collapse{{ actualite.id }}" aria-expanded="false" aria-controls="collapse{{ actualite.id }}">
                                    Check
                                </button>
                                <a href="{{ path('app_actualite_show_front', {'id': actualite.id}) }}">
                                    <button class="btn btn-primary btn-sm">
                                        Read More
                                    </button>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-md-12">
                    <p>No results found.</p>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
