<form method="post" action="{{ path('app_voiture_delete', {'idv': voiture.idv}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE"> <!-- This line specifies the DELETE method -->
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ voiture.idv) }}">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
