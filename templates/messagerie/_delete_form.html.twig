{# messagerie/_delete_form.html.twig #}



{% block body %}
<form method="post" action="{{ path('app_messagerie_delete', {'idmessage': messagerie.idmessage}) }}" onsubmit="return confirm('Are you sure you want to delete this message?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ messagerie.idmessage) }}">
    <button type="submit" class="btn btn-danger">Supprimer</button>
</form>

{% endblock %}