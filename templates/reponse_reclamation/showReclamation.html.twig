{% extends 'baseBack.html.twig' %}

{% block title %} 
    Détails réclamations
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4 mb-4">Réclamation</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th style="width: 30%;">Sujet :</th>
                            <td>{{ reclamation.sujet }}</td>
                        </tr>
                        <tr>
                            <th>Description :</th>
                            <td>{{ reclamation.description }}</td>
                        </tr>
                        <tr>
                            <th>Date de réclamation :</th>
                            <td>{{ reclamation.dateReclamation ? reclamation.dateReclamation|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Email :</th>
                            <td>{{ reclamation.emailUser }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-center">
                    <a href="{{ path('app_reclamation_index_all') }}" class="btn btn-secondary mr-2">Retour</a>
                    <a href="{{ path('app_reponse_reclamation_new', {'idr': reclamation.idr}) }}" class="btn btn-primary">Répondre</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
