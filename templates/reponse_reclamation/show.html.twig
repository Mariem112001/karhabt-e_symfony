{% extends 'baseBack.html.twig' %}

{% block title %} 
    Détails de réponse
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4 mb-4">Réponse d'une réclamation</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th style="width: 30%; font-size: 1rem;">Contenu de la réponse :</th>
                            <td style="font-size: 1rem;">{{ reponse_reclamation.contenuReponse }}</td>
                        </tr>
                        <tr>
                            <th style="font-size: 1rem;">Date de réponse :</th>
                            <td style="font-size: 1rem;">{{ reponse_reclamation.dateReponseR ? reponse_reclamation.dateReponseR|date('Y-m-d') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-center mt-4">
                    <a href="{{ path('app_reponse_reclamation_index') }}" class="btn btn-secondary mr-2">Retour</a>
                    <a href="{{ path('app_reponse_reclamation_edit', {'idreponser': reponse_reclamation.idreponser}) }}" class="btn btn-primary">Modifier</a>
                </div>
                
                {{ include('reponse_reclamation/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
